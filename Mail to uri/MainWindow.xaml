<Window x:Class="Mail_to_uri.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mail_to_uri"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="320" Icon="mail icon.ico">
    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">
        <Label>TO:</Label>
        <TextBox Name="tbEmail" Width="300" Height="20" Margin="2">someone@mail.com</TextBox>
        <Label>CC:</Label>
        <TextBox Name="tbCC" Width="300" Height="20" Margin="2">someoneCC@mail.com</TextBox>
        <Label>BCC:</Label>
        <TextBox Name="tbBCC" Width="300" Height="20" Margin="2">someoneBCC@mail.com</TextBox>
        <Label>Subject:</Label>
        <TextBox Name="tbSubject" Width="300" Height="20" Margin="2">我是主旨</TextBox>
        <Label>Body:</Label>
        <TextBox Name="tbContent" Width="300" Height="60" Margin="2" AcceptsReturn="True">我是內文222</TextBox>
        <Button Name="btnSend" Click="btnSend_Click" Margin="2">Send</Button>
        <Button Name="btnTest" Click="btnTest_Click"  Margin="2">Test</Button>
        <Button Name="btnTest2" Click="btnTest2_Click" Margin="2">Test2</Button>
    </StackPanel>
</Window>
